<style>
  /* Navigation link styling to override browser defaults */
  nav a {
    color: white !important;
    text-decoration: none !important;
  }
  
  nav a:visited {
    color: white !important;
  }
  
  nav a:hover {
    color: #d1d5db !important; /* text-gray-300 */
  }
  
  nav a:active {
    color: white !important;
  }
  
  /* Responsives Design für das Overlay-Menü */
  @media (max-width: 768px) {
    footer .bg-black {
      margin: 1rem;
      padding: 1.5rem;
    }
    
    footer nav {
      margin-bottom: 1rem;
    }
    
    footer nav a {
      font-size: 0.875rem;
    }
    
    footer .flex.space-x-4 {
      gap: 0.75rem;
    }
  }
  
  @media (max-width: 480px) {
    footer .bg-black {
      margin: 0.5rem;
      padding: 1rem;
    }
    
    footer nav {
      gap: 0.5rem;
    }
    
    footer .social-icons svg {
      width: 1rem;
      height: 1rem;
    }
  }
</style> 