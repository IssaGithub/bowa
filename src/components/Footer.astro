---
// Import the logo image
import VectorLogo from '../../public/images/VectorLogo.png?url';
---

<footer class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 z-30 pointer-events-none">
  <!-- Logo Section (moved from header) -->
  <div class="container mx-auto px-2 py-6 text-center">
    <a href={`${import.meta.env.BASE_URL}`} class="inline-block px-6 py-3 hover:opacity-80 transition-opacity">
      <img src={VectorLogo} alt="BOWAVE" class="h-8 md:h-10 w-auto mx-auto" />
    </a>
    <!-- Datum/Zeit -->
    <div class="text-xs text-center text-gray-300 mt-4">
      05/06/2025 05:38 LDN
    </div>
  </div>
  <!-- Navigation Overlay - positioned over the slideshow -->
  <div class="pointer-events-auto">
    <div class="p-8 max-w-md w-full">
      <div class="flex flex-col items-center">
       
        
        <!-- Navigation -->
        <nav class="flex flex-col items-center space-y-3 text-sm mb-6">
          <a href={`${import.meta.env.BASE_URL}/shop`} class="hover:text-gray-300 transition-colors text-white no-underline">shop</a>
          <a href={`${import.meta.env.BASE_URL}/about`} class="hover:text-gray-300 transition-colors text-white no-underline">über uns</a>
          <a href={`${import.meta.env.BASE_URL}/news`} class="hover:text-gray-300 transition-colors text-white no-underline">news</a>
          <a href={`${import.meta.env.BASE_URL}/news/lookbook`} class="hover:text-gray-300 transition-colors text-white no-underline">lookbook</a>
