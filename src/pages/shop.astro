---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Shop - BOWAVE">
  <div class="container mx-auto px-4 py-16">
    <div class="max-w-6xl mx-auto">
      <h1 class="text-4xl font-bold mb-12 text-center">BOWAVE Shop</h1>
      
      <!-- Filter Bar -->
      <div class="flex flex-wrap justify-center gap-4 mb-16 text-sm">
        <button class="border border-gray-600 px-6 py-3 hover:border-gray-400 transition-colors bg-gray-800">
          Alle Artikel
        </button>
        <button class="border border-gray-600 px-6 py-3 hover:border-gray-400 transition-colors">
          T-Shirts
        </button>
        <button class="border border-gray-600 px-6 py-3 hover:border-gray-400 transition-colors">
          Hoodies
        </button>
        <button class="border border-gray-600 px-6 py-3 hover:border-gray-400 transition-colors">
          Jacken
        </button>
        <button class="border border-gray-600 px-6 py-3 hover:border-gray-400 transition-colors">
          Accessoires
        </button>
        <button class="border border-gray-600 px-6 py-3 hover:border-gray-400 transition-colors">
          Taschen
        </button>
      </div>
      
      <!-- Product Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
        
        <!-- Product 1 -->
        <div class="group cursor-pointer">
          <div class="bg-gray-800 aspect-square mb-6 flex items-center justify-center border border-gray-700 group-hover:border-gray-500 transition-colors">
            <div class="text-center">
              <div class="bg-red-600 px-4 py-2 mb-3 mx-auto w-fit">
                <span class="text-white font-bold">BOWAVE</span>
              </div>
              <p class="text-gray-400 text-sm">Box Logo Tee</p>
            </div>
          </div>
          <h3 class="font-semibold mb-2 text-lg">Box Logo T-Shirt</h3>
          <p class="text-gray-400 mb-3">Klassisch Rot</p>
          <p class="text-xl font-bold">€75</p>
          <div class="flex gap-2 mt-3">
            <span class="w-5 h-5 bg-red-600 rounded-full cursor-pointer border-2 border-white"></span>
            <span class="w-5 h-5 bg-black rounded-full cursor-pointer border border-gray-600"></span>
            <span class="w-5 h-5 bg-white rounded-full cursor-pointer border border-gray-600"></span>
          </div>
        </div>
        
        <!-- Product 2 -->
        <div class="group cursor-pointer">
          <div class="bg-gray-800 aspect-square mb-6 flex items-center justify-center border border-gray-700 group-hover:border-gray-500 transition-colors">
            <div class="text-center">
              <div class="bg-red-600 px-4 py-2 mb-3 mx-auto w-fit">
                <span class="text-white font-bold">BOWAVE</span>
              </div>
              <p class="text-gray-400 text-sm">Hoodie</p>
            </div>
          </div>
          <h3 class="font-semibold mb-2 text-lg">Box Logo Hoodie</h3>
          <p class="text-gray-400 mb-3">Melange Grau</p>
          <p class="text-xl font-bold">€165</p>
          <div class="flex gap-2 mt-3">
            <span class="w-5 h-5 bg-gray-500 rounded-full cursor-pointer border-2 border-white"></span>
            <span class="w-5 h-5 bg-black rounded-full cursor-pointer border border-gray-600"></span>
            <span class="w-5 h-5 bg-red-600 rounded-full cursor-pointer border border-gray-600"></span>
          </div>
        </div>
        
        <!-- Product 3 -->
        <div class="group cursor-pointer">
          <div class="bg-gray-800 aspect-square mb-6 flex items-center justify-center border border-gray-700 group-hover:border-gray-500 transition-colors">
            <div class="text-center">
              <div class="bg-red-600 px-4 py-2 mb-3 mx-auto w-fit">
                <span class="text-white font-bold">BOWAVE</span>
              </div>
              <p class="text-gray-400 text-sm">Jacke</p>
            </div>
          </div>
          <h3 class="font-semibold mb-2 text-lg">BOWAVE Bomberjacke</h3>
          <p class="text-gray-400 mb-3">Schwarz</p>
          <p class="text-xl font-bold">€285</p>
          <div class="flex gap-2 mt-3">
            <span class="w-5 h-5 bg-black rounded-full cursor-pointer border-2 border-white"></span>
            <span class="w-5 h-5 bg-blue-800 rounded-full cursor-pointer border border-gray-600"></span>
          </div>
        </div>
        
        <!-- Product 4 -->
        <div class="group cursor-pointer">
          <div class="bg-gray-800 aspect-square mb-6 flex items-center justify-center border border-gray-700 group-hover:border-gray-500 transition-colors">
            <div class="text-center">
              <div class="bg-red-600 px-4 py-2 mb-3 mx-auto w-fit">
                <span class="text-white font-bold">BOWAVE</span>
              </div>
              <p class="text-gray-400 text-sm">Beanie</p>
            </div>
          </div>
          <h3 class="font-semibold mb-2 text-lg">Logo Beanie</h3>
          <p class="text-gray-400 mb-3">Rot</p>
          <p class="text-xl font-bold">€45</p>
          <div class="flex gap-2 mt-3">
            <span class="w-5 h-5 bg-red-600 rounded-full cursor-pointer border-2 border-white"></span>
            <span class="w-5 h-5 bg-black rounded-full cursor-pointer border border-gray-600"></span>
            <span class="w-5 h-5 bg-gray-500 rounded-full cursor-pointer border border-gray-600"></span>
          </div>
        </div>
        
        <!-- Product 5 -->
        <div class="group cursor-pointer">
          <div class="bg-gray-800 aspect-square mb-6 flex items-center justify-center border border-gray-700 group-hover:border-gray-500 transition-colors">
            <div class="text-center">
              <div class="bg-red-600 px-4 py-2 mb-3 mx-auto w-fit">
                <span class="text-white font-bold">BOWAVE</span>
              </div>
              <p class="text-gray-400 text-sm">Rucksack</p>
            </div>
          </div>
          <h3 class="font-semibold mb-2 text-lg">FS25 Rucksack</h3>
          <p class="text-gray-400 mb-3">Cordura Nylon</p>
          <p class="text-xl font-bold">€125</p>
          <div class="flex gap-2 mt-3">
            <span class="w-5 h-5 bg-black rounded-full cursor-pointer border-2 border-white"></span>
            <span class="w-5 h-5 bg-red-600 rounded-full cursor-pointer border border-gray-600"></span>
          </div>
        </div>
        
        <!-- Product 6 -->
        <div class="group cursor-pointer">
          <div class="bg-gray-800 aspect-square mb-6 flex items-center justify-center border border-gray-700 group-hover:border-gray-500 transition-colors">
            <div class="text-center">
              <div class="bg-red-600 px-4 py-2 mb-3 mx-auto w-fit">
                <span class="text-white font-bold">BOWAVE</span>
              </div>
              <p class="text-gray-400 text-sm">Cap</p>
            </div>
          </div>
          <h3 class="font-semibold mb-2 text-lg">5-Panel Camp Cap</h3>
          <p class="text-gray-400 mb-3">Canvas</p>
          <p class="text-xl font-bold">€55</p>
          <div class="flex gap-2 mt-3">
            <span class="w-5 h-5 bg-black rounded-full cursor-pointer border-2 border-white"></span>
            <span class="w-5 h-5 bg-white rounded-full cursor-pointer border border-gray-600"></span>
            <span class="w-5 h-5 bg-red-600 rounded-full cursor-pointer border border-gray-600"></span>
          </div>
        </div>
        
        <!-- Product 7 -->
        <div class="group cursor-pointer">
          <div class="bg-gray-800 aspect-square mb-6 flex items-center justify-center border border-gray-700 group-hover:border-gray-500 transition-colors">
            <div class="text-center">
              <div class="bg-red-600 px-4 py-2 mb-3 mx-auto w-fit">
                <span class="text-white font-bold">BOWAVE</span>
              </div>
              <p class="text-gray-400 text-sm">Langarm</p>
            </div>
          </div>
          <h3 class="font-semibold mb-2 text-lg">Classic Logo L/S Tee</h3>
          <p class="text-gray-400 mb-3">Weiß</p>
          <p class="text-xl font-bold">€85</p>
          <div class="flex gap-2 mt-3">
            <span class="w-5 h-5 bg-white rounded-full cursor-pointer border-2 border-white"></span>
            <span class="w-5 h-5 bg-black rounded-full cursor-pointer border border-gray-600"></span>
            <span class="w-5 h-5 bg-gray-500 rounded-full cursor-pointer border border-gray-600"></span>
          </div>
        </div>
        
        <!-- Product 8 -->
        <div class="group cursor-pointer">
          <div class="bg-gray-800 aspect-square mb-6 flex items-center justify-center border border-gray-700 group-hover:border-gray-500 transition-colors">
            <div class="text-center">
              <div class="bg-red-600 px-4 py-2 mb-3 mx-auto w-fit">
                <span class="text-white font-bold">BOWAVE</span>
              </div>
              <p class="text-gray-400 text-sm">Deck</p>
            </div>
          </div>
          <h3 class="font-semibold mb-2 text-lg">Skateboard Deck</h3>
          <p class="text-gray-400 mb-3">8.5" x 32"</p>
          <p class="text-xl font-bold">€95</p>
          <div class="flex gap-2 mt-3">
            <span class="w-5 h-5 bg-red-600 rounded-full cursor-pointer border-2 border-white"></span>
            <span class="w-5 h-5 bg-blue-600 rounded-full cursor-pointer border border-gray-600"></span>
            <span class="w-5 h-5 bg-yellow-500 rounded-full cursor-pointer border border-gray-600"></span>
          </div>
        </div>
        
      </div>
      
      <!-- Load More -->
      <div class="text-center mt-16">
        <button class="border border-gray-600 px-10 py-4 hover:border-gray-400 transition-colors text-lg">
          Weitere Produkte laden
        </button>
      </div>
      
      <!-- Newsletter Signup -->
      <div class="mt-20 border-t border-gray-700 pt-16">
        <div class="text-center">
          <h2 class="text-3xl font-bold mb-6">Bleiben Sie informiert</h2>
          <p class="text-gray-400 mb-8 text-lg">Erhalten Sie Benachrichtigungen über neue Drops und exklusive Releases</p>
          <div class="max-w-md mx-auto flex gap-4">
            <input 
              type="email" 
              placeholder="Geben Sie Ihre E-Mail ein"
              class="flex-1 bg-transparent border border-gray-600 px-6 py-3 focus:border-gray-400 focus:outline-none text-lg"
            />
            <button class="bg-red-600 px-8 py-3 hover:bg-red-700 transition-colors text-lg">
              Abonnieren
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <Footer />
</Layout> 